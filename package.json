{
  "name": "vscode-megalinter",
  "displayName": "MegaLinter",
  "description": "Configure and Run MegaLinter using a visual interface",
  "version": "0.1.0",
  "publisher": "nvuillam",
  "repository": {
    "type": "git",
    "url": "https://github.com/nvuillam/vscode-megalinter"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:megalinter-custom-flavor.yml",
    "workspaceContains:.mega-linter.yml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "megalinter.openConfiguration",
        "title": "MegaLinter: Open Configuration",
        "icon": "$(gear)"
      },
      {
        "command": "megalinter.openRun",
        "title": "MegaLinter: Run MegaLinter",
        "icon": "$(play)"
      },
      {
        "command": "megalinter.openCustomFlavorBuilder",
        "title": "MegaLinter: Custom Flavor Builder",
        "icon": "$(package)"
      },
      {
        "command": "megalinter.revealSection",
        "title": "MegaLinter: Reveal Section",
        "icon": "$(go-to-file)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "megalinter.openConfiguration",
          "group": "navigation@1",
          "when": "resourceFilename == '.mega-linter.yml'"
        },
        {
          "command": "megalinter.openConfiguration",
          "group": "navigation@2",
          "when": "resourceFilename == '.megalinter.yml'"
        },
        {
          "command": "megalinter.openCustomFlavorBuilder",
          "group": "navigation@10",
          "when": "resourceFilename == 'megalinter-custom-flavor.yml' || resourceFilename == 'megalinter-custom-flavor.yaml' || resourceFilename == 'mega-linter-flavor.yml' || resourceFilename == 'mega-linter-flavor.yaml'"
        }
      ],
      "editor/context": [
        {
          "command": "megalinter.openConfiguration",
          "group": "navigation@1",
          "when": "resourceFilename == '.mega-linter.yml'"
        },
        {
          "command": "megalinter.openConfiguration",
          "group": "navigation@2",
          "when": "resourceFilename == '.megalinter.yml'"
        },
        {
          "command": "megalinter.openCustomFlavorBuilder",
          "group": "navigation@10",
          "when": "resourceFilename == 'megalinter-custom-flavor.yml' || resourceFilename == 'megalinter-custom-flavor.yaml' || resourceFilename == 'mega-linter-flavor.yml' || resourceFilename == 'mega-linter-flavor.yaml'"
        }
      ],
      "editor/title": [
        {
          "command": "megalinter.openCustomFlavorBuilder",
          "group": "navigation@10",
          "when": "resourceFilename == 'megalinter-custom-flavor.yml' || resourceFilename == 'megalinter-custom-flavor.yaml' || resourceFilename == 'mega-linter-flavor.yml' || resourceFilename == 'mega-linter-flavor.yaml'"
        }
      ]
    },
    "configuration": {
      "title": "MegaLinter",
      "properties": {
        "megalinter.megaLinterRunnerVersion": {
          "type": "string",
          "default": "latest",
          "markdownDescription": "Version used for mega-linter-runner (channels: `latest`, `beta`, `alpha`, or an explicit semver like `9.4.0`).",
          "scope": "application"
        },
        "megalinter.run.engine": {
          "type": "string",
          "enum": [
            "docker",
            "podman"
          ],
          "default": "docker",
          "description": "Container engine used by the MegaLinter Run view."
        },
        "megalinter.run.flavor": {
          "type": "string",
          "default": "full",
          "description": "Default MegaLinter flavor used by the Run view."
        },
        "megalinter.run.version": {
          "type": "string",
          "default": "latest",
          "description": "Default MegaLinter docker image version used by the Run view."
        },
        "megalinter.run.parallelCores": {
          "type": "number",
          "minimum": 1,
          "default": 4,
          "description": "Number of parallel cores to use when running MegaLinter from the Run view."
        },
        "megalinter.run.applyFixes": {
          "type": "boolean",
          "default": false,
          "description": "Enable formatting/fixes (APPLY_FIXES) as configured in .mega-linter.yml. When false, runs with APPLY_FIXES=none."
        },
        "megalinter.run.recommendVsCodeExtensions": {
          "type": "boolean",
          "default": true,
          "description": "Show and open recommended VS Code extensions produced by MegaLinter reports."
        },
        "megalinter.debug": {
          "type": "boolean",
          "default": false,
          "description": "Display more debugging logs in MegaLinter Output Channel"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "compile": "webpack --mode development",
    "sync-megalinter": "node ./scripts/sync-megalinter.mjs",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/koa": "^2.15.0",
    "@types/node": "^18.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/vsce": "^3.7.1",
    "css-loader": "^6.8.1",
    "eslint": "^8.0.0",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.4.0",
    "typescript": "^5.0.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0"
  },
  "dependencies": {
    "@rjsf/core": "^5.13.0",
    "@rjsf/utils": "^5.13.0",
    "@rjsf/validator-ajv8": "^5.13.0",
    "@types/yaml": "^1.9.6",
    "@vscode/codicons": "^0.0.36",
    "axios": "^1.13.2",
    "js-yaml": "^4.1.0",
    "koa": "^3.1.1",
    "marked": "^11.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "yaml": "^2.8.2"
  }
}
